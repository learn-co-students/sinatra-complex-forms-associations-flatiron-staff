<h1>Update Pet</h1>

<form method="post" action="/pets/<%= @pet.id %>">
  <input id="hidden" type="hidden" name="_method" value="patch">

  <input type="text" name="pet_name" id="pet_name" value="<%= @pet.name %>">

  <% @owners.each do |owner| %>
    <input
      type="radio"
      value="<%= owner.id %>"
      name="pet_owner"
      id="<%= owner.id %>"
      <%= owner.id == @pet.owner_id ? "checked" : "" %>>
      <%= owner.name %>
  <% end %>

  <br>

  <label for="owner">New owner</label>
  <input type="text" name="owner_name" id="owner">

  <input type="submit" value="Update Pet">
</form>
