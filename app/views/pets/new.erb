<h1>Create a new Pet</h1>

<form method="post" action="/pets">
  <input type="text" name="pet_name" id="pet_name">

  <% @owners.each do |owner| %>
    <input type="checkbox" value="<%= owner.id %>" name="pet_owner" id="<%= owner.id %>"><%= owner.name %>
  <% end %>

  <br>

  <label for="owner">New owner</label>
  <input type="text" name="owner_name" id="owner">

  <input type="submit" value="Create Pet">
</form>
